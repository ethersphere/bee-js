{
  "include": ["src"],
  "compilerOptions": {
    "alwaysStrict": true,
    "target": "ES6",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "strict": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": ["./src/types"]
  },
  "exclude": ["dist", "node_modules"]
}
