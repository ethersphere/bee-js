{
  "name": "@ethersphere/bee-js",
  "version": "0.1.0",
  "description": "Storage library for Bee",
  "keywords": [
    "Bee",
    "Swarm",
    "Decentralised Storage"
  ],
  "homepage": "https://github.com/ethersphere/bee-js",
  "bugs": {
    "url": "https://github.com/ethersphere/bee-js/issues/"
  },
  "license": "BSD-3-Clause",
  "main": "lib/index.js",
  "browser": {
    "stream": "readable-stream"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ethersphere/bee-js.git"
  },
  "scripts": {
    "postinstall": "patch-package",
    "compile": "npm run compile:node",
    "compile:watch": "tasegir compile -- --watch",
    "compile:node": "webpack --progress --mode development --env.target=node",
    "compile:web": "webpack --progress --mode development --env.target=web",
    "docs": "typedoc --mode modules --excludeNotExported --readme none --out docs src",
    "types-check": "tsc --noEmit",
    "release": "tasegir release",
    "test": "npm run test:node && npm run test:browser",
    "lint": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" && eslint --fix \"src/**/*.ts\" \"test/**/*.ts\"",
    "test:node": "mocha -r ts-node/register 'test/**/*.ts'",
    "test:browser": "karma start",
    "test2:browser": "tasegir test --target browser --target webworker"
  },
  "dependencies": {
    "axios": "^0.21.0",
    "readable-stream": "^3.6.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-typescript": "^7.12.1",
    "@types/chai": "^4.2.14",
    "@types/debug": "^4.1.5",
    "@types/karma": "^5.0.1",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.14.6",
    "@types/readable-stream": "^2.3.9",
    "@types/webpack": "^4.41.25",
    "@types/yargs-parser": "^15.0.0",
    "@types/terser-webpack-plugin": "^5.0.2",
    "@types/webpack-bundle-analyzer": "^3.9.0",
    "babel-loader": "^8.2.1",
    "chai": "^4.2.0",
    "debug": "^4.2.0",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "karma": "^5.2.3",
    "karma-chrome-launcher": "^3.1.0",
    "karma-cli": "^2.0.0",
    "karma-edge-launcher": "~0.4.2",
    "karma-firefox-launcher": "^1.2.0",
    "karma-junit-reporter": "^1.2.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.5",
    "karma-mocha-webworker": "^1.3.0",
    "karma-sourcemap-loader": "~0.3.7",
    "karma-webpack": "^5.0.0-alpha.3.0",
    "mocha": "^8.2.1",
    "patch-package": "^6.2.2",
    "prettier": "^2.1.2",
    "tasegir": "^1.8.0",
    "terser-webpack-plugin": "^5.0.3",
    "typedoc": "^0.19.2",
    "typedoc-plugin-markdown": "^3.0.11",
    "webpack": "^5.5.0",
    "webpack-bundle-analyzer": "^4.1.0",
    "yargs-parser": "^20.2.4"
  },
  "engines": {
    "node": ">=10.0.0",
    "npm": ">=6.0.0"
  }
}
