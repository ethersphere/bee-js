#!/usr/bin/env bash

cat >dist/cjs/package.json <<!EOF
{
    "type": "commonjs",
    "browser": {
      "data": "data.browser",
      "./utils/collection.node.js": "./utils/collection.browser.js"
    }
}
!EOF

cat >dist/mjs/package.json <<!EOF
{
    "type": "module",
    "browser": {
      "data": "data.browser",
      "./utils/collection.node.js": "./utils/collection.browser.js"
    }
}
!EOF
